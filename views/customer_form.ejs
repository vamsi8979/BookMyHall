<% include partials/header %>
<h1>Customer form</h1>
<%= data %>
<form action="/customer/<%= data._id %>?_method=PUT" method="POST">
    <div class="loginDiv form-group">
       
            <label class="myFont">Name :</label>
            <input type="text" name="name" class="form-control" value="<%= data.name %>" ><br>
        
            <label class="myFont">Email :</label>
            <h4 class="form-control"> <%= data.email%></h4><br>
        
            <label class="myFont">Mobile Number :</label>
            <input type="number" name="mobile" class="form-control" value="<%= data.phno %>"><br>
        
            <label class="myFont">Location :</label>
            <input type="text" name="location" class="form-control" value="<%= data.location %>"><br>
        
            <br>
            <button class="btn btn-primary btn-block">Submit</button>
    </div>
</form>
<% include partials/footer %>